{
	"plugins": ["@ianvs/prettier-plugin-sort-imports", "prettier-plugin-jsdoc"],
	"tabWidth": 4,
	"useTabs": true,
	"printWidth": 120,
	"singleQuote": true,
	"jsxSingleQuote": true,
	"endOfLine": "auto",
	"importOrder": ["^@/(.*)$", "^[./]"],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"importOrderParserPlugins": [
		"jsx",
		"typescript",
		"classProperties",
		"nullish-coalescing-operator",
		"optional-chaining",
		"logical-assignment-operators"
	],
	"overrides": [
		{
			"files": ["*.yml", "*.yaml"],
			"options": {
				"tabWidth": 2,
				"useTabs": false
			}
		}
	]
}
